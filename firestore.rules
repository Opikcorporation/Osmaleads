rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // WARNING: TEMPORARY RULE - OPEN ACCESS FOR DEBUGGING
    // This allows any authenticated user to read and write all data.
    // This is NOT secure and should be replaced with granular rules.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
