
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Helper Functions ---
    function isAuth() {
      return request.auth != null;
    }

    function isAdmin() {
      // Safely check if auth exists before trying to access its properties.
      // This prevents the entire rules service from crashing on unauthenticated requests.
      return isAuth() && get(/databases/$(database)/documents/collaborators/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    // --- Collaborators Rules ---
    match /collaborators/{userId} {
      allow read: if isAuth();
      // Allow creation if done by a user who is already an admin.
      // The /api/create-user endpoint relies on the Admin SDK which bypasses these rules,
      // so this rule mainly provides a clear security model for any potential client-side admin actions.
      allow create: if isAdmin();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // --- Leads Rules ---
    match /leads/{leadId} {
      // Allow any authenticated user to read (list and get).
      // The app's client-side query will handle filtering for assigned leads.
      // Admins are allowed to write (create, update, delete).
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    match /leads/{leadId}/notes/{noteId} {
       allow read, write: if isAuth();
    }
    
    match /groups/{groupId} {
        allow read, write: if isAdmin();
    }
    match /distributionSettings/{settingId} {
        allow read, write: if isAdmin();
    }
    match /integrationSettings/{settingId} {
        allow read, write: if isAdmin();
    }

    match /scoringRules/{ruleId} {
        allow read, write: if isAdmin();
    }
  }
}
