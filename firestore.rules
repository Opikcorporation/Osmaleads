rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Helper Functions ---
    function isAuth() {
      return request.auth != null;
    }

    function isAdmin() {
      // Check if the user making the request has an 'admin' role in their own profile document.
      return isAuth() && get(/databases/$(database)/documents/collaborators/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- Collaborators Rules ---
    match /collaborators/{userId} {
      allow read: if isAuth();
      allow create: if isAdmin();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // --- Leads Rules ---
    match /leads/{leadId} {
      // Admins can get any lead. Collaborators can get leads assigned to them.
      allow get: if isAdmin() || (isAuth() && resource.data.assignedCollaboratorId == request.auth.uid);
      
      // Any authenticated user can list leads. The query in the app filters them correctly.
      allow list: if isAuth();

      // Write rules: Any authenticated user can write. This will be refined later if needed.
      // This is more secure than a blanket allow, but still permissive for development.
      allow write: if isAuth();
    }
    
    // WARNING: TEMPORARY RULE - OPEN ACCESS FOR DEBUGGING
    // This allows any authenticated user to read and write all other data.
    // This is NOT secure and should be replaced with granular rules.
    match /groups/{groupId} {
        allow read, write: if isAdmin();
    }
    match /distributionSettings/{settingId} {
        allow read, write: if isAdmin();
    }
    match /integrationSettings/{settingId} {
        allow read, write: if isAdmin();
    }
     match /leads/{leadId}/notes/{noteId} {
        allow read, write: if isAuth();
    }
  }
}
