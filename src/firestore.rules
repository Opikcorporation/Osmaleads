/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a role-based access control (RBAC) model with owner-only and shared access patterns.
 *
 * Data Structure:
 * - /collaborators/{collaboratorId}: Stores collaborator profiles.
 * - /groups/{groupId}: Stores group information.
 * - /leads/{leadId}: Stores lead data, with 'assignedCollaboratorId' for access control.
 * - /leads/{leadId}/notes/{noteId}: Stores notes for leads.
 * - /distributionSettings/{settingId}: Stores lead distribution rules.
 *
 * Key Security Decisions:
 * - Users can create and manage their own collaborator profile.
 * - Admins have broader access to manage users, groups, leads, and settings.
 * - Leads are readable by all signed-in users but writable only by admins or assigned collaborators.
 * - Notes are writable by their creator and readable by admins or the note's creator.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/collaborators/$(request.auth.uid))
             && get(/databases/$(database)/documents/collaborators/$(request.auth.uid)).data.role == 'admin';
    }

    function isAssignedCollaborator(leadId) {
      let lead = get(/databases/$(database)/documents/leads/$(leadId));
      return lead.data.assignedCollaboratorId == request.auth.uid;
    }

    // Collection Rules

    match /collaborators/{collaboratorId} {
      // Any signed-in user can list/get collaborator profiles (e.g., for avatars, names).
      allow list, get: if isSignedIn();

      // A user can create their own profile. An admin can create any profile.
      allow create: if isOwner(collaboratorId) || isAdmin();

      // A user can update their own profile. An admin can update any profile.
      allow update: if isOwner(collaboratorId) || isAdmin();

      // Only an admin can delete a collaborator document.
      allow delete: if isAdmin();
    }

    match /groups/{groupId} {
      allow list, get: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /distributionSettings/{settingId} {
      allow list, get, create, update, delete: if isAdmin();
    }

    match /leads/{leadId} {
      allow list, get: if isSignedIn();

      // Only admins can create new leads.
      allow create: if isAdmin();

      // Only admins or the assigned collaborator can update/delete a lead.
      allow update, delete: if isAdmin() || isAssignedCollaborator(leadId);

      match /notes/{noteId} {
        // The creator of the note or an admin can read/write it.
        allow get, list, update, delete: if isOwner(resource.data.collaboratorId) || isAdmin();

        // A user can only create a note for themselves, and it must be linked to the correct lead.
        allow create: if isOwner(request.resource.data.collaboratorId)
                      && request.resource.data.leadId == leadId;
      }
    }
  }
}
