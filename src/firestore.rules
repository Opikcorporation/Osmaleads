/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a role-based access control (RBAC) model.
 *
 * Key Security Decisions:
 * - Users can create and manage their own collaborator profile.
 * - Admins have broader access to manage users, groups, leads, and settings.
 * - Leads are readable by all signed-in users but writable only by admins or assigned collaborators.
 * - Notes are writable by their creator and readable by admins or the note's creator.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/collaborators/$(request.auth.uid))
             && get(/databases/$(database)/documents/collaborators/$(request.auth.uid)).data.role == 'admin';
    }

    // Collection Rules
    match /collaborators/{collaboratorId} {
      // Un utilisateur authentifié peut créer son propre profil. C'est la règle cruciale.
      allow create: if isOwner(collaboratorId);

      // Tout utilisateur authentifié peut voir la liste des collaborateurs.
      allow list, get: if isSignedIn();

      // Un utilisateur peut modifier son propre profil. Un admin peut modifier n'importe quel profil.
      allow update: if isOwner(collaboratorId) || isAdmin();

      // Seul un admin peut supprimer un profil.
      allow delete: if isAdmin();
    }

    match /groups/{groupId} {
      allow list, get: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /distributionSettings/{settingId} {
      allow list, get, create, update, delete: if isAdmin();
    }

    match /leads/{leadId} {
      // Tout utilisateur authentifié peut voir les leads.
      allow list, get: if isSignedIn();

      // Seuls les admins peuvent créer de nouveaux leads.
      allow create: if isAdmin();

      // Seuls les admins ou le collaborateur assigné peuvent modifier/supprimer un lead.
      allow update, delete: if isAdmin() || (exists(/databases/$(database)/documents/leads/$(leadId)) && resource.data.assignedCollaboratorId == request.auth.uid);

      match /notes/{noteId} {
        // Le créateur de la note ou un admin peut la gérer.
        allow get, list, update, delete: if isOwner(resource.data.collaboratorId) || isAdmin();
        
        // Un utilisateur ne peut créer une note que s'il en est l'auteur et qu'elle correspond au bon lead.
        allow create: if isOwner(request.resource.data.collaboratorId)
                      && request.resource.data.leadId == leadId;
      }
    }
  }
}
