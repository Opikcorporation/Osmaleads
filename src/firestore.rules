rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /collaborators/{collaboratorId} {
      // Allow any authenticated user to list all collaborators.
      // This is necessary for the dashboard to function correctly.
      allow list, get: if request.auth != null;

      // Allow a user to create their own profile.
      allow create: if request.auth != null && request.auth.uid == collaboratorId;
      
      // Allow a user to update their own profile.
      allow update, delete: if request.auth != null && request.auth.uid == collaboratorId;
    }

    // Keep other collections open for now during development
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
